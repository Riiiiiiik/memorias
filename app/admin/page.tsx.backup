"use client";

import { useState, useEffect } from "react";
import { createClient } from "@/lib/supabase/client";
import { Loader2, Upload, Save, CheckCircle, Trash2, Edit, X, LogOut, ImagePlus } from "lucide-react";
import { cn } from "@/lib/utils";
import { logout } from "@/app/auth/actions";

interface Memory {
    id: string;
    title: string;
    description: string;
    date: string;
    image_url: string;
    media_type: string;
}

export default function AdminPage() {
    const [loading, setLoading] = useState(false);
    const [success, setSuccess] = useState(false);
    const [mediaFile, setMediaFile] = useState<File | null>(null);
    const [memories, setMemories] = useState<Memory[]>([]);
    const [editingId, setEditingId] = useState<string | null>(null);

    // Form State
    const [title, setTitle] = useState("");
    const [date, setDate] = useState(new Date().toISOString().split('T')[0]);
    const [description, setDescription] = useState("");
    const [currentImageUrl, setCurrentImageUrl] = useState("");
    const [searchTerm, setSearchTerm] = useState("");

    // Google Picker State
    const [importingFromGoogle, setImportingFromGoogle] = useState(false);

    const supabase = createClient();

    useEffect(() => {
        fetchMemories();
        loadGooglePickerScript();
    }, []);

    const fetchMemories = async () => {
        const { data } = await supabase.from('memorias').select('*').order('date', { ascending: false });
        if (data) setMemories(data as Memory[]);
    };

    const handleEdit = (memory: Memory) => {
        setEditingId(memory.id);
        setTitle(memory.title);
        setDate(memory.date);
        setDescription(memory.description || "");
        setCurrentImageUrl(memory.image_url);
        setMediaFile(null); // Reset file input
        window.scrollTo({ top: 0, behavior: 'smooth' });
    };

    const handleCancelEdit = () => {
        setEditingId(null);
        setTitle("");
        setDescription("");
        setDate(new Date().toISOString().split('T')[0]);
        setCurrentImageUrl("");
        setMediaFile(null);
        setSuccess(false);
    };

    const handleDelete = async (id: string) => {
        if (!confirm("Tem certeza que deseja excluir esta memória?")) return;

        setLoading(true);
        await supabase.from('memorias').delete().eq('id', id);
        await fetchMemories();
        setLoading(false);
    };

    const handleFileChange = (e: React.ChangeEvent<HTMLInputElement>) => {
        if (e.target.files && e.target.files[0]) {
            setMediaFile(e.target.files[0]);
        }
    };

    const handleSubmit = async (e: React.FormEvent) => {
        e.preventDefault();
        if (!title) return;
        if (!editingId && !mediaFile) return; // Create needs file

        try {
            setLoading(true);
            setSuccess(false);

            let publicUrl = currentImageUrl;
            let mediaType = 'image';

            // 1. Upload File if new one selected
            if (mediaFile) {
                const fileExt = mediaFile.name.split('.').pop();
                const fileName = `${Date.now()}.${fileExt}`;
                const filePath = `${fileName}`;
                const isVideo = mediaFile.type.startsWith('video/');
                mediaType = isVideo ? 'video' : 'image';

                const { error: uploadError } = await supabase.storage
                    .from('memorias')
                    .upload(filePath, mediaFile);

                if (uploadError) throw uploadError;

                const { data: urlData } = supabase.storage
                    .from('memorias')
                    .getPublicUrl(filePath);

                publicUrl = urlData.publicUrl;
            }

            // 2. Insert or Update
            if (editingId) {
                // Update
                const { error } = await supabase
                    .from('memorias')
                    .update({
                        title,
                        description,
                        date,
                        image_url: publicUrl,
                        // Only update media_type if new file uploaded
                        ...(mediaFile ? { media_type: mediaType } : {})
                    })
                    .eq('id', editingId);

                if (error) throw error;
            } else {
                // Create
                const { error } = await supabase
                    .from('memorias')
                    .insert({
                        title,
                        description,
                        date,
                        image_url: publicUrl,
                        media_type: mediaFile && mediaFile.type.startsWith('video/') ? 'video' : 'image',
                    });

                if (error) throw error;
            }

            setSuccess(true);
            if (!editingId) {
                // Reset only if creating new (keep form for quick edit validation)
                handleCancelEdit();
            }
            fetchMemories(); // Refresh list

        } catch (error: any) {
            console.error('Error:', error);
            alert('Erro ao salvar: ' + (error.message || 'Desconhecido'));
        } finally {
            setLoading(false);
        }
    };

    // Google Handlers
    const handleConnectGoogle = () => {
        window.location.href = '/api/auth/google';
    };

    const handleLoadGooglePhotos = async () => {
        setLoadingGoogle(true);
        setShowGooglePicker(true);

        const result = await listGooglePhotos();

        if (result.error) {
            console.error('Google Photos Error:', result.error);

            // If not authenticated, redirect to Google OAuth automatically
            if (result.error.includes('NOT AUTHENTICATED')) {
                setShowGooglePicker(false);
                setLoadingGoogle(false);
                // Redirect to Google login
                window.location.href = '/api/auth/google';
                return;
            }

            // For other errors, just show alert
            alert(`Erro do Google Photos:\n\n${result.error}\n\nSe o erro for de permissão, saia e faça login novamente no admin.`);
            setShowGooglePicker(false);
        } else {
            setGooglePhotos(result.mediaItems);
        }
        setLoadingGoogle(false);
    };

    const handleImportPhoto = async (photo: any) => {
        setImportingGoogle(photo.id);
        const result = await importGooglePhoto(photo);
        if (result.success) {
            fetchMemories();
            // Optional: Remove from list or show success state
        } else {
            alert('Erro ao importar: ' + result.error);
        }
        setImportingGoogle(null);
    };

    const filteredMemories = memories.filter(m =>
        m.title.toLowerCase().includes(searchTerm.toLowerCase()) ||
        m.date.includes(searchTerm)
    );

    return (
        <div className="min-h-screen bg-slate-950 text-slate-100 p-8">
            {/* Google Picker Modal */}
            {showGooglePicker && (
                <div className="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/80 backdrop-blur-sm animate-in fade-in duration-200">
                    <div className="bg-slate-900 w-full max-w-4xl h-[80vh] rounded-2xl border border-slate-800 flex flex-col shadow-2xl overflow-hidden">
                        <div className="p-4 border-b border-slate-800 flex justify-between items-center bg-slate-900/50">
                            <h2 className="text-lg font-bold flex items-center gap-2 text-white">
                                <ImagePlus className="text-blue-400" />
                                Google Fotos
                                <span className="text-xs font-normal text-slate-500 bg-slate-800 px-2 py-0.5 rounded-full border border-slate-700">Últimas 50</span>
                            </h2>
                            <button onClick={() => setShowGooglePicker(false)} className="p-2 hover:bg-slate-800 rounded-lg text-slate-400 hover:text-white transition-colors">
                                <X size={20} />
                            </button>
                        </div>

                        <div className="flex-1 overflow-y-auto p-4 custom-scrollbar">
                            {loadingGoogle ? (
                                <div className="flex flex-col items-center justify-center h-full gap-4">
                                    <Loader2 className="animate-spin w-10 h-10 text-blue-500" />
                                    <p className="text-slate-400">Conectando ao Google...</p>
                                </div>
                            ) : (
                                <div className="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
                                    {googlePhotos.map(photo => (
                                        <div key={photo.id} className="group relative aspect-square bg-slate-800 rounded-xl overflow-hidden cursor-pointer border-2 border-transparent hover:border-blue-500 transition-all shadow-sm">
                                            <img src={photo.baseUrl} className="w-full h-full object-cover" loading="lazy" />

                                            {/* Video Indicator */}
                                            {photo.mediaMetadata?.video && (
                                                <div className="absolute top-2 right-2 bg-black/60 p-1.5 rounded-full backdrop-blur-sm">
                                                    <div className="w-2 h-2 bg-white rounded-full" />
                                                </div>
                                            )}

                                            {/* Hover Overlay */}
                                            <div className="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center backdrop-blur-[2px]">
                                                <button
                                                    onClick={() => handleImportPhoto(photo)}
                                                    disabled={!!importingGoogle}
                                                    className="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg font-medium text-sm flex items-center gap-2 transform translate-y-4 group-hover:translate-y-0 transition-transform shadow-lg hover:shadow-blue-500/25 disabled:opacity-50 disabled:cursor-not-allowed"
                                                >
                                                    {importingGoogle === photo.id ? <Loader2 className="animate-spin w-4 h-4" /> : <Upload size={16} />}
                                                    {importingGoogle === photo.id ? 'Sal...' : 'Importar'}
                                                </button>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            )}
                        </div>
                    </div>
                </div>
            )}

            <div className="max-w-6xl mx-auto space-y-12">
                <header className="flex justify-between items-center bg-slate-900/50 p-4 rounded-2xl border border-slate-800 backdrop-blur-sm sticky top-0 z-40 shadow-lg shadow-black/20">
                    <div className="flex items-center gap-4">
                        <div className="w-3 h-3 bg-green-500 rounded-full animate-pulse shadow-[0_0_10px_theme(colors.green.500)]" />
                        <h1 className="text-xl font-bold text-white tracking-tight">Painel Administrativo</h1>
                    </div>
                    <div className="flex bg-slate-800/50 rounded-lg p-1 gap-1 border border-slate-700/50">
                        <button
                            onClick={handleLoadGooglePhotos}
                            className="flex items-center gap-2 px-3 py-1.5 rounded-md text-sm font-medium hover:bg-blue-500/10 text-blue-400 hover:text-blue-300 transition-colors border border-transparent hover:border-blue-500/20"
                            title="Importar do Google"
                        >
                            <ImagePlus size={16} />
                            <span className="hidden sm:inline">Importar Google</span>
                        </button>
                        <div className="w-px bg-slate-700/50 my-1" />
                        <form action={logout}>
                            <button className="flex items-center gap-2 text-slate-400 hover:text-red-400 hover:bg-red-500/10 px-3 py-1.5 rounded-md transition-colors h-full border border-transparent hover:border-red-500/20">
                                <LogOut size={16} /> <span className="hidden sm:inline text-sm font-medium">Sair</span>
                            </button>
                        </form>
                    </div>
                </header>

                <div className="grid lg:grid-cols-[400px_1fr] gap-8 items-start">
                    {/* Form Column */}
                    <div className="space-y-4 sticky top-24">
                        <h2 className="text-lg font-semibold text-slate-300 flex items-center gap-2">
                            {editingId ? <Edit size={18} className="text-indigo-400" /> : <Upload size={18} className="text-green-400" />}
                            {editingId ? "Editar Memória" : "Nova Memória"}
                        </h2>

                        <form onSubmit={handleSubmit} className="space-y-5 bg-slate-900 p-6 rounded-2xl border border-slate-800 shadow-xl">

                            {/* Title */}
                            <div className="space-y-1.5">
                                <label className="text-xs font-medium text-slate-500 uppercase tracking-wider">Título</label>
                                <input
                                    type="text"
                                    required
                                    value={title}
                                    onChange={(e) => setTitle(e.target.value)}
                                    className="w-full bg-slate-950 border border-slate-700 rounded-xl p-3 focus:ring-2 focus:ring-indigo-500 outline-none transition-all placeholder:text-slate-600"
                                    placeholder="Ex: Nossa viagem..."
                                />
                            </div>

                            {/* Date */}
                            <div className="space-y-1.5">
                                <label className="text-xs font-medium text-slate-500 uppercase tracking-wider">Data</label>
                                <input
                                    type="date"
                                    required
                                    value={date}
                                    onChange={(e) => setDate(e.target.value)}
                                    className="w-full bg-slate-950 border border-slate-700 rounded-xl p-3 focus:ring-2 focus:ring-indigo-500 outline-none transition-all text-slate-300"
                                />
                            </div>

                            {/* Media File */}
                            <div className="space-y-1.5">
                                <label className="text-xs font-medium text-slate-500 uppercase tracking-wider">
                                    {editingId ? "Alterar Mídia (Opcional)" : "Foto ou Vídeo"}
                                </label>
                                <div className={cn(
                                    "border-2 border-dashed border-slate-700 rounded-xl p-6 flex flex-col items-center justify-center cursor-pointer hover:bg-slate-800/50 transition-colors relative overflow-hidden group min-h-[160px]",
                                    mediaFile && "border-indigo-500 bg-indigo-500/10"
                                )}>
                                    <input
                                        type="file"
                                        accept="image/*,video/*"
                                        onChange={handleFileChange}
                                        className="hidden"
                                        id="media-upload"
                                    />
                                    <label htmlFor="media-upload" className="cursor-pointer flex flex-col items-center z-10 w-full h-full justify-center">
                                        {mediaFile ? (
                                            <>
                                                <CheckCircle className="w-8 h-8 text-indigo-400 mb-2" />
                                                <span className="text-indigo-300 text-xs font-medium truncate max-w-[200px] text-center px-2">{mediaFile.name}</span>
                                            </>
                                        ) : (
                                            <>
                                                <Upload className="w-8 h-8 text-slate-500 mb-2 group-hover:scale-110 transition-transform" />
                                                <span className="text-slate-400 text-xs">Clique para selecionar</span>
                                            </>
                                        )}
                                    </label>

                                    {/* Preview of current image if editing and no new file */}
                                    {currentImageUrl && !mediaFile && (
                                        <div className="absolute inset-0 opacity-40 pointer-events-none grayscale group-hover:grayscale-0 transition-all duration-500">
                                            {currentImageUrl.includes('.mp4') || currentImageUrl.includes('video') ? (
                                                <video src={currentImageUrl} className="w-full h-full object-cover" />
                                            ) : (
                                                <img src={currentImageUrl} className="w-full h-full object-cover" />
                                            )}
                                        </div>
                                    )}
                                </div>
                            </div>

                            {/* Description */}
                            <div className="space-y-1.5">
                                <label className="text-xs font-medium text-slate-500 uppercase tracking-wider">Descrição</label>
                                <textarea
                                    value={description}
                                    onChange={(e) => setDescription(e.target.value)}
                                    className="w-full bg-slate-950 border border-slate-700 rounded-xl p-3 focus:ring-2 focus:ring-indigo-500 outline-none h-24 resize-none transition-all placeholder:text-slate-600"
                                    placeholder="Escreva algo sobre esse momento..."
                                />
                            </div>

                            <div className="flex gap-3 pt-2">
                                {editingId && (
                                    <button
                                        type="button"
                                        onClick={handleCancelEdit}
                                        className="px-4 py-3 rounded-xl font-bold text-slate-400 hover:text-white hover:bg-slate-800 transition-all border border-slate-700"
                                        title="Cancelar Edição"
                                    >
                                        <X size={20} />
                                    </button>
                                )}
                                <button
                                    type="submit"
                                    disabled={loading || (!editingId && !mediaFile)}
                                    className={cn(
                                        "flex-1 flex items-center justify-center gap-2 py-3 rounded-xl font-bold text-white transition-all shadow-lg",
                                        loading ? "bg-slate-700 cursor-not-allowed" : "bg-indigo-600 hover:bg-indigo-500 hover:shadow-indigo-500/25 active:scale-[0.98]"
                                    )}
                                >
                                    {loading ? <Loader2 className="animate-spin" /> : <Save size={20} />}
                                    {loading ? "Salvando..." : (editingId ? "Atualizar Memória" : "Salvar Memória")}
                                </button>
                            </div>

                            {success && (
                                <div className="p-3 bg-green-500/10 border border-green-500/20 rounded-xl text-green-400 text-center text-sm font-medium animate-in fade-in slide-in-from-bottom-2 flex items-center justify-center gap-2">
                                    <CheckCircle size={16} /> Salvo com sucesso!
                                </div>
                            )}
                        </form>
                    </div>

                    {/* List Column */}
                    <div className="space-y-6">
                        <div className="flex justify-between items-end sticky top-0 bg-slate-950/80 backdrop-blur-md py-4 z-30 -mx-4 px-4 sm:mx-0 sm:px-0">
                            <h2 className="text-lg font-semibold text-slate-300">
                                Memórias ({filteredMemories.length})
                            </h2>
                            <input
                                type="text"
                                placeholder="Buscar..."
                                className="bg-slate-900 border border-slate-800 rounded-lg px-3 py-1.5 text-sm text-white focus:outline-none focus:border-indigo-500 w-32 focus:w-48 transition-all"
                                value={searchTerm}
                                onChange={e => setSearchTerm(e.target.value)}
                            />
                        </div>

                        <div className="space-y-3 pb-8">
                            {filteredMemories.map((mem) => (
                                <div
                                    key={mem.id}
                                    className={cn(
                                        "bg-slate-900 border p-3 rounded-xl flex gap-4 transition-all group",
                                        editingId === mem.id ? "border-indigo-500 bg-indigo-500/5 ring-1 ring-indigo-500/50" : "border-slate-800 hover:border-slate-600"
                                    )}
                                >
                                    <div className="w-20 h-20 bg-slate-950 rounded-lg overflow-hidden flex-shrink-0 relative border border-slate-800">
                                        {mem.media_type === 'video' ? (
                                            <video src={mem.image_url} className="w-full h-full object-cover opacity-80" muted />
                                        ) : (
                                            <img src={mem.image_url} alt={mem.title} className="w-full h-full object-cover opacity-90" />
                                        )}
                                        {mem.media_type === 'video' && (
                                            <div className="absolute inset-0 flex items-center justify-center bg-black/20">
                                                <div className="w-6 h-6 rounded-full bg-black/50 flex items-center justify-center border border-white/20">
                                                    <div className="w-0 h-0 border-t-[3px] border-t-transparent border-l-[6px] border-l-white border-b-[3px] border-b-transparent ml-0.5" />
                                                </div>
                                            </div>
                                        )}
                                    </div>

                                    <div className="flex-1 min-w-0 py-1 flex flex-col justify-between">
                                        <div>
                                            <h3 className={cn("font-bold truncate text-base", editingId === mem.id ? "text-indigo-400" : "text-slate-200")}>
                                                {mem.title}
                                            </h3>
                                            <p className="text-xs text-slate-500 flex items-center gap-2 mt-0.5">
                                                {new Date(mem.date).toLocaleDateString()}
                                                {mem.description && <span className="w-1 h-1 rounded-full bg-slate-600" />}
                                                {mem.description && <span className="truncate max-w-[150px] italic opacity-70">{mem.description}</span>}
                                            </p>
                                        </div>

                                        <div className="flex gap-2 justify-end opacity-0 sm:opacity-0 sm:group-hover:opacity-100 transition-opacity translate-y-2 sm:group-hover:translate-y-0 duration-200">
                                            <button
                                                onClick={() => handleEdit(mem)}
                                                className="px-3 py-1.5 text-xs font-medium bg-slate-800 text-slate-300 hover:text-white hover:bg-indigo-600 rounded-lg transition-colors border border-slate-700 hover:border-indigo-500"
                                            >
                                                Editar
                                            </button>
                                            <button
                                                onClick={() => handleDelete(mem.id)}
                                                className="px-3 py-1.5 text-xs font-medium bg-slate-800 text-slate-300 hover:text-white hover:bg-red-600 rounded-lg transition-colors border border-slate-700 hover:border-red-500"
                                            >
                                                Excluir
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            ))}

                            {memories.length === 0 && (
                                <div className="text-center py-16 text-slate-500 border-2 border-dashed border-slate-800/50 rounded-2xl flex flex-col items-center gap-3">
                                    <div className="w-12 h-12 rounded-full bg-slate-900 border border-slate-800 flex items-center justify-center text-slate-600">
                                        <Upload size={20} />
                                    </div>
                                    <p>Nenhuma memória adicionada ainda.</p>
                                </div>
                            )}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    );
}
